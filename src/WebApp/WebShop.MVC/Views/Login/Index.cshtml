@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="row">
    <div class="col-md-6">
        <h2 class="mt-4">Sign In</h2>
        <form class="mt-4" asp-controller="Login" asp-action="Login" method="post" asp-antiforgery="true">
            <div class="mb-3">
                <label asp-for="UsernameOrEmail" class="mb-2">Username / Email Address</label>
                <input asp-for="UsernameOrEmail" type="text" class="form-control w-75" id="username-email-input" />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="mb-2">Password</label>
                <input asp-for="Password" type="password" class="form-control w-75" id="password-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="remember-me-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</div>
