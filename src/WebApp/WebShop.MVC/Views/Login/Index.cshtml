@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="row">
    <div class="col-md-6">
        <h2 class="mt-4">Sign In</h2>
        <form class="row g-3 mt-3" asp-controller="Login" asp-action="Login" method="post" asp-antiforgery="true">
            <div class="col-12 mb-2">
                <label asp-for="UsernameOrEmail" class="form-label mb-2">Username / Email Address</label>
                <input asp-for="UsernameOrEmail" type="text" class="form-control w-75"/>
                <span asp-validation-for="UsernameOrEmail" class="fs-6 fw-light text-danger"></span>
            </div>
            <div class="col-12 mb-2">
                <label asp-for="Password" class="form-label mb-2">Password</label>
                <input asp-for="Password" type="password" class="form-control w-75"/>
                <span asp-validation-for="Password" class="fs-6 fw-light text-danger"></span>
            </div>
            <div class="col-12 mb-2">
                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="remember-me-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </form>
    </div>
</div>
